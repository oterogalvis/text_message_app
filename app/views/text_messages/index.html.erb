<p id="notice"><%= notice %></p>

<h2>List of Text Messages</h2>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @text_messages.each do |text_message| %>
      <tr>
        <td><%= text_message.number %></td>
        <td><%= text_message.body %></td>
        <td><%= link_to 'Show', text_message %></td> 
        <!-- <td><%= link_to 'Edit', edit_text_message_path(text_message) %></td> -->
        <td><%= link_to 'Delete', text_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

